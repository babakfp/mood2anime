@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
    .container {
        @apply md:!max-w-screen-md;
    }
}

@layer utilities {
    .font-recursive-casual {
        font-variation-settings:
            "CASL" 1,
            "CRSV" 1;
    }
}

.badge.link {
    @apply hover:bg-opacity-50;
}

a.link {
    @apply hover:opacity-50;
}

a.bg-primary-content {
    @apply hover:bg-opacity-50;
}
